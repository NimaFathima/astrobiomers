# Environment variables for ASTROBIOMERS
# Copy this file to .env and fill in your actual values

# Application
ENV=development
DEBUG=true
APP_NAME=Space Biology Knowledge Engine
APP_URL=http://localhost:3000

# Security
JWT_SECRET=change-this-to-a-random-secret-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=1440
AIRFLOW_FERNET_KEY=change-this-to-a-random-fernet-key
AIRFLOW_SECRET_KEY=change-this-to-a-random-secret-key

# Neo4j Knowledge Graph
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=spacebiology123

# PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=astrobiomers_db
POSTGRES_USER=astrobiomers
POSTGRES_PASSWORD=spacebio_postgres

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=spacebio_redis
REDIS_DB=0

# Elasticsearch
ELASTICSEARCH_HOST=localhost
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_INDEX_PREFIX=astrobiomers

# MinIO (S3-compatible storage)
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=astrobiomers
MINIO_SECRET_KEY=spacebio_minio
MINIO_BUCKET=publications
MINIO_USE_SSL=false

# External APIs

# OpenAI (for LLM and embeddings)
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_EMBEDDING_MODEL=text-embedding-ada-002

# Alternative: Anthropic Claude
# ANTHROPIC_API_KEY=your-anthropic-api-key-here
# ANTHROPIC_MODEL=claude-3-opus-20240229

# PubMed API
PUBMED_EMAIL=your-email@example.com
PUBMED_API_KEY=your-pubmed-api-key-here

# NASA APIs (optional)
NASA_API_KEY=DEMO_KEY
GENELAB_API_URL=https://genelab-data.ndc.nasa.gov/genelab/data/search
OSDR_API_URL=https://osdr.nasa.gov/bio/repo/data

# Vector Database

# Option 1: Pinecone
# PINECONE_API_KEY=your-pinecone-api-key
# PINECONE_ENVIRONMENT=us-east1-gcp
# PINECONE_INDEX_NAME=space-biology

# Option 2: Weaviate (self-hosted)
WEAVIATE_URL=http://localhost:8081
WEAVIATE_API_KEY=optional-api-key

# Option 3: ChromaDB (self-hosted)
# CHROMA_HOST=localhost
# CHROMA_PORT=8000

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=1000

# Monitoring
SENTRY_DSN=your-sentry-dsn-here
LOG_LEVEL=INFO

# Email (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@astrobiomers.com

# Frontend
REACT_APP_API_URL=http://localhost:8000
REACT_APP_WS_URL=ws://localhost:8000
REACT_APP_GOOGLE_ANALYTICS_ID=your-ga-id

# OAuth (optional for social login)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
ORCID_CLIENT_ID=your-orcid-client-id
ORCID_CLIENT_SECRET=your-orcid-client-secret

# Feature Flags
ENABLE_AI_ASSISTANT=true
ENABLE_GRAPH_VISUALIZATION=true
ENABLE_COLLABORATION=true
ENABLE_ANALYTICS=true

# Performance
MAX_WORKERS=4
CACHE_TTL_SECONDS=3600
QUERY_TIMEOUT_SECONDS=30

# Development
RELOAD_ON_CHANGE=true
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
